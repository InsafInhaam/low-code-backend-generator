generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Model {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  fields Field[]
}

model Field {
  id      Int    @id @default(autoincrement())
  name    String
  type    String
  model   Model  @relation(fields: [modelId], references: [id], onDelete: Cascade)
  modelId Int
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String @default("user")
}
